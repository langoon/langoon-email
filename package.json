{
  "name": "langoon-email",
  "version": "1.0.0",
  "description": "Email templates for Langoon",
  "dependencies": {
    "typescript": "^3.6.4",
    "inline-css": "^4.0.1"
  },
  "scripts": {
    "build": "tsc filesRemove.ts && tsc filesCreate.ts",
    "filesRemove": "node --no-warnings filesRemove.js",
    "filesCreate": "node --no-warnings filesCreate.js"
  },
  "pre-commit": {
    "silent": false,
    "run": [
      "build",
      "filesRemove",
      "filesCreate"
    ]
  },
  "author": "unitario",
  "license": "ISC",
  "devDependencies": {
    "@types/inline-css": "0.0.32",
    "@types/node": "^12.11.1",
    "pre-commit": "^1.2.2"
  }
}
